{
  "name": "frontend",
  "version": "0.1.0",
  "description": "Professional beauty distribution for salons and barbershops in Indonesia.",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start -p 3000",
    "lint:typography": "node scripts/lint-typography.mjs",
    "lint:links": "node scripts/lint-links.mjs",
    "lint:tokens": "node scripts/lint-tokens.mjs",
    "lint:summary": "node scripts/lint-summary.mjs",
    "lint:hero-freeze": "node scripts/lint-hero-freeze.mjs",
    "validate:products": "node scripts/validate-products.mjs",
    "validate:content": "node scripts/validate-content.js",
    "lint:button-freeze": "node scripts/lint-button-freeze.mjs",
    "lint:carousel-freeze": "node scripts/lint-carousel-freeze.mjs",
    "lint:category-card-freeze": "node scripts/lint-category-card-freeze.mjs",
    "license-check": "npx license-checker --summary --failOn 'GPL;AGPL;LGPL'",
    "lint": "npm run lint:typography && npm run lint:links && npm run lint:tokens && npm run lint:hero-freeze && npm run lint:button-freeze && npm run lint:carousel-freeze && npm run lint:category-card-freeze && eslint",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run validate:content && npm run lint && npm run type-check && npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@next/third-parties": "16.1.6",
    "@sentry/nextjs": "10.38.0",
    "@supabase/supabase-js": "2.93.3",
    "@vercel/analytics": "^1.6.1",
    "clsx": "^2.1.1",
    "framer-motion": "12.29.2",
    "lenis": "^1.3.17",
    "next": "^16.1.6",
    "nodemailer": "7.0.13",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "0.34.5",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "5.1.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "25.1.0",
    "@types/nodemailer": "7.0.9",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "husky": "9.1.7",
    "jsdom": "27.4.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
