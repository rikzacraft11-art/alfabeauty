{
  "name": "frontend",
  "version": "0.1.0",
  "description": "Professional beauty distribution for salons and barbershops in Indonesia.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start -p 3000",
    "lint:typography": "node scripts/lint-typography.mjs",
    "lint:links": "node scripts/lint-links.mjs",
    "lint:tokens": "node scripts/lint-tokens.mjs",
    "lint:summary": "node scripts/lint-summary.mjs",
    "lint:hero-freeze": "node scripts/lint-hero-freeze.mjs",
    "lint:button-freeze": "node scripts/lint-button-freeze.mjs",
    "lint:carousel-freeze": "node scripts/lint-carousel-freeze.mjs",
    "lint:category-card-freeze": "node scripts/lint-category-card-freeze.mjs",
    "lint": "npm run lint:typography && npm run lint:links && npm run lint:tokens && npm run lint:hero-freeze && npm run lint:button-freeze && npm run lint:carousel-freeze && npm run lint:category-card-freeze && eslint",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run lint && npm run type-check && npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@next/third-parties": "16.1.4",
    "@sentry/nextjs": "9.16.1",
    "@supabase/supabase-js": "2.91.0",
    "framer-motion": "12.27.0",
    "next": "16.1.1",
    "nodemailer": "7.0.12",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "0.33.5",
    "web-vitals": "4.2.4",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^16.1.5",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "24.0.0",
    "@types/nodemailer": "7.0.5",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "5.1.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.1",
    "husky": "9.1.7",
    "jsdom": "27.4.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
